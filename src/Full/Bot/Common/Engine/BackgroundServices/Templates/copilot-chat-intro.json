  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "💬 Meet Copilot Chat - your AI work assistant",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Copilot Chat is like having a helpful colleague who's always available. Ask questions, brainstorm ideas, get things done faster - all in a natural conversation. No special commands needed.",
      "isSubtle": true,
      "spacing": "Small",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "✨ What makes Copilot Chat different?",
          "weight": "Bolder",
          "wrap": true,
          "spacing": "Small"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Instant help",
              "value": "Get answers, ideas, and assistance anytime you need it."
            },
            {
              "title": "Work context",
              "value": "It understands your work - files, meetings, emails, and more."
            },
            {
              "title": "Your assistant",
              "value": "Draft messages, summarize content, plan your day, learn new things."
            },
            {
              "title": "Conversational",
              "value": "Just talk naturally - refine, ask follow-ups, iterate together."
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "🚀 Great ways to get started (click to try)",
      "weight": "Bolder",
      "spacing": "Medium",
      "wrap": true
    },
    {
      "type": "Container",
      "spacing": "Small",
      "items": [
