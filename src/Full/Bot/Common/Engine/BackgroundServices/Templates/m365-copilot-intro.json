    },
    {
      "type": "Action.OpenUrl",
      "title": "Try: Draft a response",
      "url": "https://teams.microsoft.com/l/chat/0/0?message=Help%20me%20draft%20a%20professional%20response%20to%20%5Bperson%27s%20name%5D%20confirming%20I%20can%20attend%20the%20meeting%20and%20asking%20for%20the%20agenda."
