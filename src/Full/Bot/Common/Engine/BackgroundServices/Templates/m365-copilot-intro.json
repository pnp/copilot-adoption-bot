{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "🚀 Start your Copilot journey in Microsoft 365",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Microsoft 365 Copilot is your AI assistant built right into the apps you use every day - Teams, Outlook, Word, Excel, and PowerPoint. It helps you work faster and focus on what matters most.",
      "isSubtle": true,
      "spacing": "Small",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "✨ What can Copilot do for you?",
          "weight": "Bolder",
          "wrap": true,
          "spacing": "Small"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Save hours",
              "value": "Draft documents, emails, and presentations in seconds."
            },
            {
              "title": "Stay caught up",
              "value": "Get meeting summaries and email highlights instantly."
            },
            {
              "title": "Work smarter",
              "value": "Analyze data, find insights, and make better decisions."
            },
            {
              "title": "Focus better",
              "value": "Let Copilot handle the busywork while you do your best work."
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "💡 Where to start (click to try now)",
      "weight": "Bolder",
      "spacing": "Medium",
      "wrap": true
    },
    {
      "type": "Container",
      "spacing": "Small",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "📧",
                  "size": "Large"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "In Outlook: Catch up on emails",
                  "weight": "Bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Ask Copilot to summarize what you missed",
                  "isSubtle": true,
                  "wrap": true,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "Small",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "💬",
                  "size": "Large"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "In Teams: Get meeting insights",
                  "weight": "Bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Find key decisions and action items from meetings",
                  "isSubtle": true,
                  "wrap": true,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "Small",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "📝",
                  "size": "Large"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "In Word: Create a first draft",
                  "weight": "Bolder",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Start with your ideas, let Copilot write the draft",
                  "isSubtle": true,
                  "wrap": true,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "spacing": "Small",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
